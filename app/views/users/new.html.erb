<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Crear cuenta</h1>
      <%= form_with model: @user, url: signup_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, 'Nombre', class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :email, 'Correo', class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control', required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :password, 'Contraseña', class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control', required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, 'Confirmar contraseña', class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
        </div>
        <%= f.submit 'Registrarme', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
